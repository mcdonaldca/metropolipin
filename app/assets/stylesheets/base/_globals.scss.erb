* {
	padding: 0;
	margin: 0;
}

html, body {
	width: 100%;
	height: 100%;
}

html {
	background: #ddd;
}

body {
	max-width: 500px;
	margin: 0 auto;
	background: $cream;
	background-image: url(<%= image_path 'swirl.png' %>);
}

.wrapper {
	background-image: url(<%= image_path 'swirl.png' %>);
}

header {
	position: relative;
	text-align: center;
	height: 2em;
	background: $dark-orange;
	font: 1.1em $righteous-stack;
	padding: .15em 0 0 .25em;
	color: $cream;

	#title {
		font-size: 1.15em;
		position: absolute;
		top: .25em;
		left: .35em;

		.highlight {
			color: $yellow;
		}
	}

	#logo-bg {
		display: inline-block;
		height: 4em;
		width: 4em;
		background: $dark-orange;
		@include border-radius(50%);

		#logo {
			padding-top: .5em;
			height: 3em;
			width: 3em;
			margin: 0 auto;

			img {
				height: 100%;
				width: 100%;
			}
		}
	}

	#menu {
		position: absolute;
		right: .35em;
		top: .25em;

		height: 1.5em;
		width: 1.5em;

		img {
			width: 100%;
			height: 100%;
		}
	}
}

nav {

	ul {
		display: none;
		padding: 0;
		margin: 0;
		float: left;
		width: 100%;
		background: $blu;
		border-bottom: 3px $dark-orange solid;

		li {
			position: relative;
			width: 100%;
			list-style: none;
			text-align: right;
			height: 2.5em;

			border-bottom: 1px darken($blu, 10%) solid;

			a {
				position: absolute;
				display: inline-block;
				width: 100%;
				height: 100%;
				right: .75em;
				top: .6em;

				color: $cream;
				text-decoration: none;
				font-family: $cabin-stack;
				letter-spacing: 1px;
				font-weight: 400;
			}
		}
	}
}

h1#root {
	margin: 2em 0 .75em;
	text-align: center;
	font: 2em $cabin-stack;
	color: $dark-orange;
}

h1 {
	margin: .2em 0 .35em;
	text-align: center;
	font: 2em $cabin-stack;
	color: $blu;
}

h2 {
	margin: 1em 0 1em;
	text-align: center;
	font: 1.3em $cabin-stack;
	color: $blu;
}


#status {
	width: 80%;
	margin: 1.75em auto 0;
	padding: .5em;
	text-align: center;
	background: $orange;
	font-family: $cabin-stack;
	color: $cream;

	@include border-radius(10px);
}


.options {

	.backwards, .forwards {
		display: inline-block;
		width: 50%;
		padding-top: .5em;
	}

	.backwards {
		text-align: left;
	}

	.forwards {
		text-align: right;
	}

	a {
		display: inline-block;
		margin: 0 .5em;
		padding: .25em .5em;
		background-color: $blu;
		color: $cream;
		text-decoration: none;
		font-family: $cabin-stack;
		font-weight: 400;

		@include border-radius(5px);
	}
}

.city-form {

	width: 90%;
	margin: 4em auto 0;


	input {
		padding: 0;
		margin: 0;
		border: none;
		@include border-radius(10px);
		font: 1em $cabin-stack;
	}

	input[type="text"] {
		width: 79%;
		padding: .5em 0 .5em 11%;

		-webkit-border-top-right-radius: 0;
	     -moz-border-top-right-radius: 0;
	      -ms-border-top-right-radius: 0;
	          border-top-right-radius: 0;
	  -webkit-border-bottom-right-radius: 0;
	     -moz-border-bottom-right-radius: 0;
	      -ms-border-bottom-right-radius: 0;
	          border-bottom-right-radius: 0;

	  background-image: url(<%= image_path 'find.png' %>);
	  background-size: 1em 1em;
	  background-position: .5em .6em;
	  background-repeat: no-repeat;

	}

	input[type="submit"] {
		width: 10%;
		padding: .5em 0;
		background-color: #105B63;
		color: $cream;

		-webkit-border-top-left-radius: 0;
	     -moz-border-top-left-radius: 0;
	      -ms-border-top-left-radius: 0;
	          border-top-left-radius: 0;
	  -webkit-border-bottom-left-radius: 0;
	     -moz-border-bottom-left-radius: 0;
	      -ms-border-bottom-left-radius: 0;
	          border-bottom-left-radius: 0;
	}

}

#map-canvas {
	height: 30em;
	width: 94%;
	margin: 3% 3% 0 3%;
	padding: 0px
}

.pin-details {

	width: 100%;
	margin-top: 3%;

	.pin {
		background-color: rgba(219, 158, 54, .55);
		width: 95%;
		padding-left: 5%;
		border-bottom: 1px solid $orange;

		.row {
			height: 2em;
			width: 100%;

			.circle {
				display: inline-block;
				@include border-radius(50%);
				height: 2em;
				width: 2em;
			}
		}

		.row1 {
			padding: .5em 0 .25em 0;
			cursor: pointer;

			.pushpin {
				background-image: url(<%= image_path 'pin_dark.png' %>);
				background-size: 2em 2em;
				background-position: 0 0;

				&.selected {
					background-image: url(<%= image_path 'pin_blue.png' %>);
				}
			}
		}

		.row2 {
			padding: .25em 0 .5em 0;

			.friends {
				background-image: url(<%= image_path 'friends_dark.png' %>);
				background-size: 2em 2em;
				background-position: 0 0;
				color: $cream;
				font-family: $cabin-stack;
				text-align: center;
				height: 1.8em;
				padding-top: .2em;

				&.up {
					background-image: url(<%= image_path 'friends_dark_up.png' %>);
				}

				&.selected {
					background-image: url(<%= image_path 'friends_blue.png' %>);

					&.up {
						background-image: url(<%= image_path 'friends_blue_up.png' %>);
					}
				}
			}

			.yelp {
				background-image: url(<%= image_path 'yelp_dark.png' %>);
				background-size: 2em 2em;
				background-position: 0 0;

				&.selected {
					background-image: url(<%= image_path 'yelp_blue.png' %>);
				}
			}
		}

		h2 {
			display: inline-block;	
			position: relative;
			color: $dark-orange;
			font: 1.1em $cabin-stack;
			top: -.5em;
			left: 1em;

			&.selected {
				color: $blu;
			}
		}

		h3 {
			display: inline-block;	
			position: relative;
			color: $dark-orange;
			font: .9em $cabin-stack;
			top: -.7em;
			left: 1.25em;

			&.selected {
				color: $blu;
			}
		}

		&.selected {
			background-color: rgba(189, 73, 50, .55);
		}
	}

	.row3 {
		display: none;
		background-color: $blu;
		margin: 0;
		padding: 0;
		

		.item {
			height: 2.25em;
			border-bottom: 1px darken($blu, 5%) solid;
			padding-top: .25em;
			padding-left: 5%;

			.circle {
				display: inline-block;
				@include border-radius(50%);
				height: 2em;
				width: 2em;
			}

			h3 {
				display: inline-block;	
				position: relative;
				color: $cream;
				font: .9em $cabin-stack;
				top: -.7em;
				left: 1.25em;
			}
		}
	}
}

button, input[type="submit"] {
	border: none;
	box-shadow: none;
	background-color: $dark-orange;
	color: $cream;
	padding: 1em 0;
	width: 90%;
	margin: 1em 5% .5em 5%;

	font: 1em $cabin-stack;

	@include border-radius(10px);

	text-align: center;
}

.wrapper {
	min-height: 100%;
	height: auto !important; /* This line and the next line are not necessary unless you need IE6 support */
	height: 100%;
	margin: 0 auto -5px; /* the bottom margin is the negative value of the footer's height */
}

.footer, .push {
	height: 5px; /* .push must be the same height as .footer */
}