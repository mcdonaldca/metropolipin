* {
	padding: 0;
	margin: 0;
}

html, body {
	height: 100%;
	width: 100%;
}

html {
	background: #ddd;
}

body {
	max-width: 500px;
	margin: 0 auto;
	background: $cream;

	&.map {
		background-image: url(<%= image_path 'swirl.png' %>);
	}
}

header {
	position: relative;
	text-align: center;
	height: 2em;
	background: $dark-orange;
	font: 1.1em $righteous-stack;
	padding: .15em 0 0 .25em;
	color: $cream;

	#title {
		font-size: 1.15em;
		position: absolute;
		top: .25em;
		left: .35em;

		.highlight {
			color: $yellow;
		}
	}

	#logo-bg {
		display: inline-block;
		height: 4em;
		width: 4em;
		background: $dark-orange;
		@include border-radius(50%);

		#logo {
			padding-top: .5em;
			height: 3em;
			width: 3em;
			margin: 0 auto;

			img {
				height: 100%;
				width: 100%;
			}
		}
	}

	#menu {
		position: absolute;
		right: .35em;
		top: .25em;

		height: 1.5em;
		width: 1.5em;

		img {
			width: 100%;
			height: 100%;
		}
	}
}

h1#root {
	margin: 2em 0 .75em;
	text-align: center;
	font: 2em $pontano-sans-stack;
	color: $dark-orange;
}


#status {
	width: 80%;
	margin: 1.75em auto 0;
	padding: .5em;
	text-align: center;
	background: $orange;
	font-family: $pontano-sans-stack;
	color: $cream;

	@include border-radius(10px);
}

nav {

		ul {
			display: none;
			padding: 0;
			margin: 0;
			float: left;
			width: 100%;
			background: $blu;
			border-bottom: 3px $dark-orange solid;

			li {
				position: relative;
				width: 100%;
				list-style: none;
				text-align: right;
				height: 2.5em;

				border-bottom: 1px darken($blu, 10%) solid;

				a {
					position: absolute;
					display: inline-block;
					width: 100%;
					height: 100%;
					right: .75em;
					top: .6em;

					color: $cream;
					text-decoration: none;
					font-family: $pontano-sans-stack;
					letter-spacing: 1px;
				}
			}
		}
	}